                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "asan-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-fsanitize=address -fno-omit-frame-pointer -g -O1",
                "CMAKE_C_FLAGS_RELWITHDEBINFO": "-fsanitize=address -fno-omit-frame-pointer -g -O1",
                "CMAKE_EXE_LINKER_FLAGS_RELWITHDEBINFO": "-fsanitize=address",
                "CMAKE_SHARED_LINKER_FLAGS_RELWITHDEBINFO": "-fsanitize=address"
            }
        },
        {
            "name": "tsan-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-fsanitize=thread -fno-omit-frame-pointer -g -O1",
                "CMAKE_C_FLAGS_RELWITHDEBINFO": "-fsanitize=thread -fno-omit-frame-pointer -g -O1",
                "CMAKE_EXE_LINKER_FLAGS_RELWITHDEBINFO": "-fsanitize=thread",
                "CMAKE_SHARED_LINKER_FLAGS_RELWITHDEBINFO": "-fsanitize=thread"
            }
        },
        {
            "name": "coverage-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-fprofile-instr-generate -fcoverage-mapping -g -O0",
                "CMAKE_C_FLAGS_RELWITHDEBINFO": "-fprofile-instr-generate -fcoverage-mapping -g -O0",
                "CMAKE_EXE_LINKER_FLAGS_RELWITHDEBINFO": "-fprofile-instr-generate",
                "CMAKE_SHARED_LINKER_FLAGS_RELWITHDEBINFO": "-fprofile-instr-generate",
                "ENABLE_COVERAGE": "ON"
            }
        },
        {
            "name": "clang-tidy-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "ENABLE_CLANG_TIDY": "ON"
            }
