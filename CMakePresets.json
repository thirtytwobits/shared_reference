    "workflowPresets": [
        {
            "name": "all-debug",
            "displayName": "Configure, Build, and Test All Debug Configurations",
            "description": "Runs all debug configurations across all compilers",
            "steps": [
                {"type": "configure", "name": "gcc-17"},
                {"type": "build", "name": "gcc-17-debug"},
                {"type": "test", "name": "gcc-17-debug"}
            ]
